# Amadeus API Credentials (get from https://developers.amadeus.com/)
AMADEUS_API_KEY=your_amadeus_api_key_here
AMADEUS_API_SECRET=your_amadeus_api_secret_here

# OpenAI API Key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here

# JWT Secret for authentication (change this to a random string)
JWT_SECRET=your-secret-key-change-in-production

# Backend Port
PYTHON_BACKEND_PORT=8000

# Database URL (SQLite by default, change for production)
DATABASE_URL=sqlite:///./travel_assistant.db

# Mem0 API Key (optional, for memory management)
MEM0_API_KEY=your_mem0_api_key_here
